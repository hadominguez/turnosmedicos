@model Turnos_Medicos.Models.Turno

@{
    ViewBag.Title = "Cancelar Turno";
}

<h2>@ViewBag.Title</h2>

<h3>¿Esta seguro que desea cancelar el turno?</h3>
<div>
    <h4>Turno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha.Day)/@Html.DisplayFor(model => model.Fecha.Month)/@Html.DisplayFor(model => model.Fecha.Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hora)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hora.Hours) :
            @if (Model.Hora.Minutes < 10)
            {
                <span>0</span>
                @Html.DisplayFor(model => model.Hora.Minutes)
            }
            else
            {
                @Html.DisplayFor(model => model.Hora.Minutes)
            }
        </dd>

        <dt>
            Médico
        </dt>

        <dd>
            @if (!Model.MedicoId.Equals(null))
            {
                @Html.DisplayFor(model => model.Medico.Persona.Apellido)
                <span>, </span>
                @Html.DisplayFor(model => model.Medico.Persona.Nombre)
            }
        </dd>

        <dt>
            Paciente
        </dt>

        <dd>
            @if (!Model.PacienteId.Equals(null))
            {
                @Html.DisplayFor(model => model.Paciente.Persona.Apellido)
                <span>, </span>
                @Html.DisplayFor(model => model.Paciente.Persona.Nombre)
            }
        </dd>

        <dt>
            Consultorio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consultorio.Nombre)
        </dd>

        <dt>
            Especialidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Especialidad.Nombre)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
			<a href="/Turnos/Index">
				<button class="btn btn-info" >Volver</button>
			</a>
            <input type="submit" value="Cancelar Turno" class="btn btn-danger" />
        </div>
    }
</div>
