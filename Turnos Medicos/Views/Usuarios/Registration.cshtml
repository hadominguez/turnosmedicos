@model Turnos_Medicos.Models.Usuario

@{
    ViewBag.Title = "Registrarse";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Identificador">DNI</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Identificador" name="Identificador" type="number" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Identificador" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Email">Email</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Email" name="Email" type="text" value="" maxlength = "50">
                <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Password">Clave</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Password" name="Password" type="text" value="" maxlength = "50">
                <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrarse" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
