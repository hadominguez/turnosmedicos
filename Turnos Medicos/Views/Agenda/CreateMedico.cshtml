@{
    ViewBag.Title = "Habilitar Agenda";
    IEnumerable<Turnos_Medicos.Models.Medico> medicos = ViewBag.ListadoMedico;
    Turnos_Medicos.Models.Medico medico = ViewBag.Medico;
}

<h2>@ViewBag.Title</h2>


@if (medico == null)
{
    <form action="/Agenda/CreateMedico/" method="get" novalidate="novalidate">

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <h3>Buscar</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-sm-4">
                <label class="control-label col-md-2" for="dni">DNI:</label>
                <div class="col-md-8">
                    <input class="form-control datepicker text-box single-line" data-val="true" id="dni" name="dni" type="number" value="" min="1" max="99999999">
                    <span class="field-validation-valid text-danger" data-valmsg-for="dni" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label class="control-label col-md-2" for="apellido">Apellido:</label>
                <div class="col-md-8">
                    <input class="form-control datepicker text-box single-line" data-val="true" id="apellido" name="apellido" type="text" value="" maxlength="30">
                    <span class="field-validation-valid text-danger" data-valmsg-for="apellido" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label class="control-label col-md-2" for="nombre">Nombre:</label>
                <div class="col-md-8">
                    <input class="form-control datepicker text-box single-line" data-val="true" id="nombre" name="nombre" type="text" value="" maxlength="30">
                    <span class="field-validation-valid text-danger" data-valmsg-for="nombre" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group col-sm-1">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" value="Buscar" class="btn btn-info" />
                </div>
            </div>
        </div>
    </form>

    if (medicos != null)
    {
        <table class="table">
            <tr>
                <th>
                    DNI
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Nombre
                </th>
                <th>Operaciones</th>
            </tr>

            @foreach (var item in medicos)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Persona.DNI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Persona.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Persona.Nombre)
                        </td>
                        <td>
                            <form action="/Agenda/CreateMedico/" method="get" novalidate="novalidate">
                                <div class="form-group col-sm-4" hidden>
                                    <div class="col-md-8">
                                        <input class="form-control datepicker text-box single-line" data-val="true" id="id_medico" name="id_medico" type="number" value="@item.Id" maxlength="30">
                                    </div>
                                </div>
                                <div class="form-group col-sm-1">
                                    <div class="col-md-offset-2 col-md-1">
                                        <input type="submit" value="Seleccionar" class="btn btn-success" />
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
            }

        </table>
    }
}
else {


<h3>Seleccione el rango de fechas para crear los turnos</h3>
using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table class="table">
            <tr>
                <th>
                    DNI
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Nombre
                </th>
            </tr>
            <tr>
                    <td>
                        @medico.Persona.DNI
                    </td>
                    <td>
                        @medico.Persona.Apellido
                    </td>
                    <td>
                        @medico.Persona.Nombre
                    </td>
                </tr>
    </table>
    <div class="form-group" hidden>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="Usuario required" id="id_medico" name="id_medico" type="number" value="@medico.Id">
        </div>
    </div>
    <h3></h3>
    <div class="form-group">
        <label class="control-label col-md-2" for="Fecha">Fecha Inicial</label>
        <div class="col-md-10">
            <input class="form-control datepicker text-box single-line" data-val="true" data-val-date="The field Fecha must be a date." data-val-required="El campo Fecha es obligatorio." id="fecha_ini" name="fecha_ini" type="date" value="" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")"/>
            <span class="field-validation-valid text-danger" data-valmsg-for="fecha_ini" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Fecha">Fecha Fin</label>
        <div class="col-md-10">
            <input class="form-control datepicker text-box single-line" data-val="true" data-val-date="The field Fecha must be a date." data-val-required="El campo Fecha es obligatorio." id="fecha_fin" name="fecha_fin" type="date" value="" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")">
            <span class="field-validation-valid text-danger" data-valmsg-for="fecha_fin" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear Turnos" class="btn btn-success" />
        </div>
    </div>
</div>
}

}

<div>
    <a href="/Agenda/Index">
        <button class="btn btn-danger">Volver</button>
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
