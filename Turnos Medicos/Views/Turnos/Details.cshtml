@model Turnos_Medicos.Models.Turno

@{
    ViewBag.Title = "Vista";
}

<h2>Información del Turno</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha.Year) /
            @Html.DisplayFor(model => model.Fecha.Month) /
            @Html.DisplayFor(model => model.Fecha.Day)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hora)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hora.Hours) :
            @if (Model.Hora.Minutes < 10)
            {
                <span>0</span>
                @Html.DisplayFor(model => model.Hora.Minutes)
            }
            else
            {
                @Html.DisplayFor(model => model.Hora.Minutes)
            }
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado.Nombre)
        </dd>

        <dt>
            Medico
        </dt>

        <dd>
            @if (!Model.MedicoId.Equals(null))
            {
                @Html.DisplayFor(model => model.Medico.Persona.Apellido)
                <span>, </span>
                @Html.DisplayFor(model => model.Medico.Persona.Nombre)
            }
        </dd>

        <dt>
            Paciente
        </dt>

        <dd>
            @if (!Model.PacienteId.Equals(null))
            {
                @Html.DisplayFor(model => model.Paciente.Persona.Apellido)
                <span>, </span>
                @Html.DisplayFor(model => model.Paciente.Persona.Nombre)
            }
        </dd>

        <dt>
            Obra Social
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ObraSocial.Nombre)
        </dd>
        <dt>
            Consultorio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consultorio.Nombre)
        </dd>

        <dt>
            Especialidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Especialidad.Nombre)
        </dd>

        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            Tarifa de la Obra Social
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ObraSocialTarifa)
        </dd>

        <dt>
            Costo Total
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostoTotal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pagado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pagado)
        </dd>


    </dl>
</div>
<p>
	<a href="/Turnos/Edit">
		<button class="btn btn-success" >Modificar</button>
	</a>
</p>
